---
import Layout from '../../layouts/Layout.astro';
import LanguageSwitcher from '../../components/LanguageSwitcher.astro';
import '../../styles/index.css';
import { languages, useTranslations, type Language } from '../../i18n/utils';
import logo from '../../assets/new-elephant.svg';
import ptfeGuidewire from '../../assets/products/ptfe-guidewire.png';
import hydrophilicGuidewire from '../../assets/products/hydrophilic-guidewire.png';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as Language);
---

<Layout lang={lang as Language}>
	<LanguageSwitcher currentLang={lang as Language} />
	<!-- Hero Section -->
	<section id="hero">
		<div class="container">
			<img src={logo.src} alt="New Elephant Logo" class="hero-logo" />
			<h1>{t('hero.title')}</h1>
			<p class="subtitle">{t('hero.subtitle')}</p>
		</div>
	</section>

	<!-- About Section -->
	<section id="about">
		<div class="container">
			<h2>{t('about.title')}</h2>
			<p>
				{t('about.description')}
			</p>
		</div>
	</section>

	<!-- Products & Solutions Section -->
	<section id="products">
		<div class="container">
			<h2>{t('products.title')}</h2>

			<div class="product-category">
				<h3 class="category-title">{t('products.categories.vascularIntervention')}</h3>
				<div class="products-grid">
					<div class="product-card">
						<img src={ptfeGuidewire.src} alt="PTFE Guidewire" class="product-image" />
						<h3>{t('products.product1.title')}</h3>
						 <p>{t('products.product1.description')}</p>
					</div>
					<div class="product-card">
						<img src={hydrophilicGuidewire.src} alt="Hydrophilic Guidewire" class="product-image" />
						<h3>{t('products.product2.title')}</h3>
						 <p>{t('products.product2.description')}</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section id="contact">
		<div class="container">
			<h2>{t('contact.title')}</h2>
			<p>{t('contact.description')}</p>
			<div class="contact-info">
				<p><strong>{t('contact.email')}:</strong> info@example.com</p>
				<p><strong>{t('contact.address')}:</strong> {t('contact.addressValue')}</p>
			</div>
		</div>
	</section>
</Layout>
